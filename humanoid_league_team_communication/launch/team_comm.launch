<launch>
    <arg name="use_game_settings" default="false"/>
    <rosparam command="load" file="$(find humanoid_league_team_communication)/config/team_communication_config.yaml" />

    <rosparam file="$(find game_controller)/config/game_controller.yaml.example" command="load"/>
    <node name="team_communication" pkg="humanoid_league_team_communication" type="team_communication" respawn="true" output="screen" />

    <group if="$(arg use_game_settings)">
            <rosparam command="load" file="~/.ros/game_settings.yaml" />
    </group>
</launch>
