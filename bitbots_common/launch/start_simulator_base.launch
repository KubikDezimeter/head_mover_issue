<launch>
    <!-- set parameter -->
    <arg name="ns" default="minibot" />
    <param name="/use_sim_time" value="true" />
    <param name="simulation_active" value="true"/>
    <param name="robot_type_name" value="Minibot"/>


    <!-- launch gazebo with soccer field -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find humanoid_league_gazebo_world)/worlds/robocup_soccer.world"/>
		<arg name="paused" value="false" />
	</include>

    <!-- load URDF -->
    <param name="robot_description" textfile="$(find minibot_description)/urdf/minibot.urdf" />
    <node name="spawn_urdf" pkg="gazebo_ros" ns="$(arg ns)" type="spawn_model" args="-file $(find minibot_description)/urdf/minibot.urdf -urdf -model minibot -x -1.5 -y 0.0 -z 0.0" />


    <!-- load the controllers -->
    <rosparam file="$(find minibot_description)/config/minibot_control.yaml" command="load"/>
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" ns="minibot" args="joint_state_controller joint_trajectory_action_controller --shutdown-timeout 0.1" />

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn="false" output="screen">
    <remap from="/joint_states" to="/minibot/joint_states" />
    </node>

    <!-- start HCM and animation or robot will not stand -->
    <remap from="current_motor_positions" to="/minibot/joint_states"/>
    <remap from="motor_goals" to="/minibot/joint_trajectory_action_controller/command" />
    <rosparam param="actionlib_client_sub_queue_size">-1</rosparam>
    <rosparam param="actionlib_server_sub_queue_size">-1</rosparam>
    <include file="$(find bitbots_animation_server)/launch/animation.launch"/>
    <rosparam file="$(find bitbots_cm730)/config/cm730.yaml" command="load"/>
    <rosparam file="$(find bitbots_cm730)/config/mx28config.yaml" command="load"/>

    <rosparam file="$(find bitbots_hcm)/config/hcm.yaml" command="load"/>
    <rosparam file="$(find bitbots_hcm)/config/hcm_state_machine.yaml" command="load"/>
    <node name="HCM" pkg="bitbots_hcm" type="hardware_control_manager.py" args="" output="screen" respawn="true"/>




</launch>